<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="GobezTalenTrade.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:GobezTalenTrade.Views"
    FlyoutBehavior="Disabled"
	xmlns:local="clr-namespace:GobezTalenTrade">
    <ShellContent
		Title="Signin"
		ContentTemplate="{DataTemplate views:SigninPage}" 
        Route="signin"/>
    <TabBar>
        
        <ShellContent
			Title="Home"
			Icon="home.png"
			ContentTemplate="{DataTemplate views:HomePage}" 
            Route="home"/>
        <ShellContent
			Title="Post"
			Icon="plus.png"
			ContentTemplate="{DataTemplate views:PostSkillPage}"
            Route="post"/>

        <ShellContent
			Title="Settings"
			Icon="settings.png"
			ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="settings"/>

    </TabBar>
</Shell>
